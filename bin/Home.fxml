<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>


<StackPane prefHeight="400.0" prefWidth="600.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="HomeController">
   <children>
      <VBox alignment="CENTER" spacing="20.0">
         <children>
            <!-- Etichetta centrata sopra i pulsanti -->
            <Label fx:id="target" text="Monteventi - Di Capua - Magliarella" />
            
            <!-- HBox per disporre i pulsanti uno accanto all'altro -->
            <HBox alignment="CENTER" spacing="30.0"> <!-- Maggiore spazio tra i pulsanti -->
               <children>
                  <Button id="loginButton" alignment="CENTER" contentDisplay="CENTER" onAction="#loginClicked" text="Pagina di login" style="-fx-font-size: 18px; -fx-padding: 10 20;"> <!-- Aumentata la dimensione del font e il padding -->
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
                  <Button id="registrazioneButton" alignment="CENTER" contentDisplay="CENTER" onAction="#registrazioneClicked" text="Pagina di registrazione" style="-fx-font-size: 18px; -fx-padding: 10 20;"> <!-- Aumentata la dimensione del font e il padding -->
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>
